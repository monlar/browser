{
  "name": "monlar-browser",
  "description": "browser for monlar",
  "version": "1.0.0",
  "private": true,
  "author": "bing.me@foxmail.com",
  "copyright": "Copyright Â© 2022, monlar org at github.",
  "main": "app/main.js",
  "build": {
    "appId": "com.github.monlar.browser",
    "productName": "monlar-browser",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "monlar-browser.exe"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "electron-log": "^4.4.6",
    "fs-jetpack": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.5",
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "source-map-support": "^0.5.21",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
